 <% if current_user.admin? %>
    <%= link_to "+ Article", new_article_path, class: 'btn btn-success'  %>
<% end %>

<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article, class: 'btn btn-success' %>
    </p>
  <% end %>
</div>


