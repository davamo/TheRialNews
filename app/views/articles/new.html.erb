<h1>Nuevo Artículo</h1>

<%= form_with(model: @article, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>

    <%= form.text_area :content %>
  </div>

<div class="actions">

  <%= form.submit "Crear Artículo" , class: 'btn btn-success' %>
</div>

<% end %>
