<h1>Nuevo Artículo</h1>

<%= form_with(model: @article, local: true) do |form| %>
<div class="mb-3">
    <%= form.label :title %>
  </div>

    <div class="mb-3">
      <%= form.text_field :title %>
     </div>

  <div class="mb-3">
    <%= form.label :content %>
  </div>

  <div class="mb-3">
    <%= form.text_area :content %>
  </div>

  <div class="mb-3">
      <%= form.submit "Crear Artículo" , class: 'btn btn-success' %>
  </div>

  <div class="mb-3">
      <%= link_to "Back to articles", articles_path , class: 'btn btn-success' %>
  </div>

<% end %>
